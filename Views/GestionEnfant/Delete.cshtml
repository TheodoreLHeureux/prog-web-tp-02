@model prog_web_tp_2.Models.Enfant

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-light">Supprimer</h1>

<h3 class="text-light">Êtes-vous certain de vouloir supprimer ceci ?</h3>
<div class="paresse">
    <hr />
    
    <dl class="row text-light">
        <dd class="col-sm-10">
            Nom : @Html.DisplayFor(model => model.Nom)
        </dd>
        <dd class="col-sm-10">
            Id : @Html.DisplayFor(model => model.Id)
        </dd>
        <dd class="col-sm-10">
            <img src="@Model.ImageURL" alt="@Model.Nom" width="300"/>
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Supprimer" class="btn btn-danger" />
    </form>
</div>
